<!DOCTYPE html>
<html lang="en">
<head>
	{% include 'html-head.twig' %}
</head>
<body class="is-touch">

	<noscript>
		{% include 'no-javascript.twig' %}
	</noscript>

  <div>
		{% block content %}
	    {% if posts %}
				<h1>{{site.title}}</h1>
	      <ul>
	        {% for post in posts %}
	          <li>
	            <a href="{{post.link}}">{{post.title}}</a>
	          </li>
	        {% endfor %}
	      </ul>
			{% else %}
	      <p>No posts.</p>
	    {% endif %}
		{% endblock %}
  </div>

	<script>
		window.APP = window.APP || {};
		APP.BASE_URL = '{{site.url}}';
		APP.THEME_URL = '{{site.theme.uri}}';
		APP.AJAX_URL = '{{fn('admin_url', 'admin-ajax.php')}}';
	</script>
	<script src="{{site.theme.link}}/js/vendor.bundle.js" defer></script>
  <script src="{{site.theme.link}}/js/app.bundle.js" defer></script>
	{{ wp_footer }}
</body>
</html>
